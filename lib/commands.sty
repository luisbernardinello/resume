% Basic commands
\newcommand{\resumeItem}[1]{
  \item\small{{#1 \vspace{-2pt}}}
}

\newcommand{\resumeSubheading}[4]{
  \vspace{-2pt}\item
    \begin{tabular*}{0.97\textwidth}[t]{l@{\extracolsep{\fill}}r}
      \textbf{#1} & \textbf{#2} \\
      \textit{\small#3} & \textit{\small #4} \\
    \end{tabular*}\vspace{-7pt}
}

\newcommand{\resumeProjectHeading}[2]{
    \item
    \begin{tabular*}{0.97\textwidth}{l@{\extracolsep{\fill}}r}
      \small#1 & \textit{\small #2} \\
    \end{tabular*}\vspace{-7pt}
}

\renewcommand\labelitemii{\textbullet}

\newcommand{\resumeSubHeadingListStart}{\begin{itemize}[leftmargin=0.15in, label={}]}
\newcommand{\resumeSubHeadingListEnd}{\end{itemize}}
\newcommand{\resumeItemListStart}{\begin{itemize}}
\newcommand{\resumeItemListEnd}{\end{itemize}\vspace{-5pt}}

% Description command (same as item but for clarity)
\newcommand{\Description}[1]{\resumeItem{#1}}

% Header
\NewDocumentCommand{\createHeader}{m}{%
    \directlua{set_resume_data("header", \luastring{#1})}%
    \begin{center}
        \textbf{\Huge \scshape \directlua{tex.sprint(get_resume_value("header", "name"))}} \\ \vspace{1pt}
        \href{\directlua{tex.sprint(get_resume_value("header", "linkedin"))}}{\underline{LinkedIn}} $|$ 
        \directlua{tex.sprint(get_resume_value("header", "phone"))} $|$
        \href{mailto:\directlua{tex.sprint(get_resume_value("header", "email"))}}{\underline{\directlua{tex.sprint(get_resume_value("header", "email"))}}} $|$
        \href{\directlua{tex.sprint(get_resume_value("header", "github"))}}{\underline{GitHub}} $|$ 
        \directlua{tex.sprint(get_resume_value("header", "address"))}
    \end{center}
}

% Education section
\newcommand{\createEducationSection}[1]{
    \section{Education}
    \resumeSubHeadingListStart
        #1
    \resumeSubHeadingListEnd
}

\NewDocumentCommand{\EducationItem}{O{}}{%
    \directlua{set_resume_data("education", \luastring{#1})}%
    \resumeSubheading
        {\directlua{tex.sprint(get_resume_value("education", "degree"))}}
        {\directlua{tex.sprint(get_resume_value("education", "institution"))}}
        {\directlua{tex.sprint(get_resume_value("education", "location"))}}
        {\directlua{tex.sprint(get_resume_value("education", "date"))}}
}

% Experience section
\newcommand{\createExperienceSection}[1]{
    \section{Experience}
    \resumeSubHeadingListStart
        #1
    \resumeSubHeadingListEnd
}

\NewDocumentCommand{\ExperienceItem}{O{} +m}{%
    \directlua{set_resume_data("experience", \luastring{#1})}%
    \resumeSubheading
        {\directlua{tex.sprint(get_resume_value("experience", "title"))}}
        {\directlua{tex.sprint(get_resume_value("experience", "company"))}}
        {\directlua{tex.sprint(get_resume_value("experience", "location"))}}
        {\directlua{tex.sprint(get_resume_value("experience", "date"))}}
    \if\relax\detokenize{#2}\relax
    \else
        \resumeItemListStart
            #2
        \resumeItemListEnd
    \fi
}

